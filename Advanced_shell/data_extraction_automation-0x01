#!/usr/bin/env bash
# Advanced_shell / data_extraction_automation-0x01
# Only uses jq, awk, sed

set -Eeuo pipefail
JSON_FILE="${1:-data.json}"

# Validate JSON
jq -e . "$JSON_FILE" >/dev/null

# Required variable names:
name="$(
  jq -r '.name' "$JSON_FILE" \
  | awk '{print toupper(substr($0,1,1)) tolower(substr($0,2))}'
)"

# height (dm -> m) -> formatted_height
formatted_height="$(
  jq -r '.height' "$JSON_FILE" \
  | awk '{printf "%.1f", $1/10}'
)"

# weight (hg -> kg) -> formatted_weight
formatted_weight="$(
  jq -r '.weight' "$JSON_FILE" \
  | awk '{printf "%.1f", $1/10}'
)"

# first type -> type (capitalize first letter)
type="$(
  jq -r '.types[0].type.name' "$JSON_FILE" \
  | sed -E 's/^([a-z])/\U\1/; s/([A-Z])([A-Z]+)/\1\L\2/g'
)"

# EXACT line the checker wants:
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
